<div class="phonepage">
  <div class="swipecard">
    <div class="user-img-swipe">
      <%= image_tag (@user.facebook_picture_url) %>
    </div>
    <div class="info">
      <div class="name-header">
        <% if @user.full_name.length <= 14 %>
          <h1><%= @user.full_name %></h1>
        <% else %>
          <h2><%= @user.full_name %></h2>
        <% end %>
      </div>
      <div class="row_cuisines">
        <div class="chef">
          <%= image_tag("chef.png") %>
        </div>
        <div class="cuisines-list tags">
          <% @user.cuisine_list.each do |cuisine| %>
            <span class="tag"><%= cuisine %></span>
          <% end %>
        </div>
      </div>
      <div class="row_interests">
        <div class="smile-happy">
          <%= image_tag("happiness.png") %>
        </div>
        <div class="interest-list tags">
          <p><% @user.interest_list.each do |interest| %>
              <span class="tag"><%= interest %></span>
            <% end %></p>
        </div>
      </div>
    </div>
  </div>
</div>