<div class="phonepage-chat-index">
  <div class="header-matches">
    <h1>My Chats</h1>
  </div>
  <div class="match-chats">
    <% if @my_chats.size > 0 %>
      <% @my_chats.each do |chat| %>
        <div class="match-card">
          <div id="match-name">
            <% if chat.match.user1 != current_user %>
              <%= link_to chat.match.user1.first_name, chat_room_path(chat) %>
            <% else %>
              <%= link_to chat.match.user2.first_name, chat_room_path(chat) %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p> You have no matches yet</p>
    <% end %>
  </div>
</div>
<h1 class="gold-text">The Blog Market</h1>